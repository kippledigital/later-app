  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "text/plain": [".txt", ".md"],
        "application/pdf": [".pdf"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+later",
      "url": "/handle-protocol?url=%s"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },

  "prefer_related_applications": false
}